{% extends 'base.html.twig' %}

{% block title 'Snowtricks - home' %}

{% block content %}
    {# Bannière #}
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center text-center" style="height: 80vh; background-image: url('/images/header/snowboard.jpg'); background-size: cover">
            <div class="col-sm-5 border text-white" style="backdrop-filter: brightness(80%)">
                <h1>Snowtricks</h1>
                <p class="lead">Bienvenue dans le blog spécialisé dans le snowtricks</p>
            </div>
        </div>
    </div>

    {# Message de confirmation #}
    <div class="container mt-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <h2 class="text-center mb-5">La liste des articles</h2>
        {# Liste des articles #}
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for post in posts %}
                <div class="col">
                    <div class="card h-100">
                        <img src="" class="card-img-top" alt="snowtricks">
                        <div class="card-body">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <a href=""></a>
                            <p class="card-text">{{ post.content }}</p>
                            <a href="{{ path('post.show', {id: post.id, slug: post.slug}) }}" class="btn btn-primary">Voir
                                plus</a>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Last updated 3 mins ago</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}