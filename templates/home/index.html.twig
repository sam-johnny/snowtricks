{% extends 'base.html.twig' %}

{% block title 'Snowtricks - home' %}

{% block content %}
    <div class="jumbotron jumbotron-fluid mt-4 text-center">
        <div class="container">
            <h1>Snowtricks</h1>
            <p class="lead">Bienvenue dans le blog spécialisé dans le snowtricks</p>
        </div>
    </div>

    <div class="container mt-5">
        <h2 class="text-center mb-5">La liste des articles</h2>
        <div class="d-flex justify-content-between">
            {% for post in posts %}
                <div class="card mt-4" style="width: 18rem;">
                    <img src="" class="card-img-top" alt="...">
                    <div class="card-body">
                        <a href="">
                            <h5 class="card-title">{{ post.title }}</h5>
                        </a>
                        <p class="text-muted fst-italic"></p>
                        <p class="card-text">{{ post.content }}</p>
                        <a href="{{ path('post.show') , {slug}-{id}" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}